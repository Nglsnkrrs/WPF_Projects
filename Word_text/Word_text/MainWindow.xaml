<Window x:Class="TextFormatterDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Formatter" Height="500" Width="850"
        Background="#f8f8f8">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов над текстовым полем -->
        <Border Grid.Row="0" 
                CornerRadius="8"
                Padding="8"
                Margin="0,0,0,6"
                Background="#eeeeee"
                BorderBrush="#cccccc"
                BorderThickness="1">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Name="BoldButton" Content="Bold" Click="BoldButton_Click" Margin="6,0"/>
                <Button Name="ItalicButton" Content="Italic" Click="ItalicButton_Click" Margin="6,0"/>
                <Button Name="UnderlineButton" Content="Underline" Click="UnderlineButton_Click" Margin="6,0"/>
                <Button Name="ClearButton" Content="Clear" Click="ClearButton_Click" Margin="12,0"/>

                <TextBlock VerticalAlignment="Center" Margin="12,0">Размер:</TextBlock>
                <ComboBox Name="FontSizeCombo" Width="80" Margin="6,0" SelectionChanged="FontSizeCombo_SelectionChanged">
                    <ComboBoxItem>10</ComboBoxItem>
                    <ComboBoxItem>12</ComboBoxItem>
                    <ComboBoxItem>14</ComboBoxItem>
                    <ComboBoxItem>16</ComboBoxItem>
                    <ComboBoxItem>18</ComboBoxItem>
                    <ComboBoxItem>20</ComboBoxItem>
                    <ComboBoxItem>24</ComboBoxItem>
                    <ComboBoxItem>28</ComboBoxItem>
                </ComboBox>

                <TextBlock VerticalAlignment="Center" Margin="12,0">Цвет:</TextBlock>
                <ComboBox Name="ColorCombo" Width="100" Margin="6,0" SelectionChanged="ColorCombo_SelectionChanged">
                    <ComboBoxItem>Black</ComboBoxItem>
                    <ComboBoxItem>Red</ComboBoxItem>
                    <ComboBoxItem>Green</ComboBoxItem>
                    <ComboBoxItem>Blue</ComboBoxItem>
                    <ComboBoxItem>Orange</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Текстовое поле -->
        <Border Grid.Row="1"
                CornerRadius="8"
                Background="White"
                BorderBrush="#cccccc"
                BorderThickness="1">
            <RichTextBox Name="Editor"
                         AcceptsTab="True"
                         Margin="8"
                         VerticalScrollBarVisibility="Auto"
                         SelectionChanged="Editor_SelectionChanged">
                <FlowDocument>
                    <Paragraph>
                        <Run>
                            Выделите часть этого текста и примените форматирование.
                            Можно комбинировать жирный, курсив, подчеркивание, цвет и размер шрифта.
                        </Run>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>
    </Grid>
</Window>
