<Window x:Class="AuthApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Width="600" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f2f4f8">

    <Window.Resources>
        <!-- Стиль кнопок -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4a90e2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C5F9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для TextBox и PasswordBox -->
        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Margin" Value="0,8,0,12"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputStyle}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputStyle}"/>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="10" Margin="40" Padding="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Авторизация" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Имя пользователя:" FontWeight="Bold" FontSize="16" Margin="0,0,0,4"/>
                <TextBox x:Name="LoginBox"/>

                <TextBlock Text="Пароль:" FontWeight="Bold" FontSize="16" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox"/>

                <Button Content="Войти" Click="Login_Click" Height="45"/>

                <TextBlock x:Name="ErrorText"
                           Foreground="Red"
                           FontWeight="Bold"
                           FontSize="15"
                           Margin="0,10,0,0"
                           Text=""
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
